<Page
    x:Class="StudyApp.QuestionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/book3.jpg" Stretch="Fill"/>
        </Grid.Background>
        <Button x:ConnectionId='1' Content="BACK" HorizontalAlignment="Left" Margin="52,30,0,0" VerticalAlignment="Top" Height="64" Width="188"                     />
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="76" Margin="73,584,0,0" VerticalAlignment="Top" Width="151"/>
        <TextBlock x:Name="lblQuestion" HorizontalAlignment="Left" Margin="55,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="606" Height="354" Foreground="#FF080808" FontFamily="Copperplate Gothic Bold"/>
        <TextBlock x:Name="lblTop" HorizontalAlignment="Left" Margin="99,189,0,0" TextWrapping="Wrap" Text="Answer this question below" VerticalAlignment="Top" Height="30" Width="256" FontSize="16" Foreground="#FF0C0000" FontWeight="Bold" FontFamily="Global Monospace"/>
        <TextBlock x:Name="lblTop2" HorizontalAlignment="Left" Margin="704,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="176" FontSize="16" Foreground="Black" FontWeight="Bold" Text="Possible Solutions" FontFamily="Global Monospace"/>
        <RadioButton x:ConnectionId='2' x:Name="radAnswer1" Content="" HorizontalAlignment="Left" Margin="701,222,0,0" VerticalAlignment="Top" Width="580" Foreground="#FF080808"                              FontFamily="Copperplate Gothic Bold" FontSize="18"/>
        <TextBlock x:Name="lblMarks" HorizontalAlignment="Left" Margin="1016,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Width="282" Height="73" FontFamily="Engravers MT"/>
        <RadioButton x:ConnectionId='3' x:Name="radAnswer2" Content="" HorizontalAlignment="Left" Margin="701,276,0,0" VerticalAlignment="Top" Width="580" Foreground="#FF080808"                              FontFamily="Copperplate Gothic Bold" FontSize="18"/>
        <RadioButton x:ConnectionId='4' x:Name="radAnswer3" Content="" HorizontalAlignment="Left" Margin="701,326,0,0" VerticalAlignment="Top" Width="572"                              Foreground="#FF080808" FontFamily="Copperplate Gothic Bold" FontSize="18"/>
        <Button x:ConnectionId='5' x:Name="btnFinish" Content="finish" HorizontalAlignment="Left" Margin="1043,589,0,0" VerticalAlignment="Top" Width="202" Height="53"                       />
        <TextBlock x:Name="lblQuestions" HorizontalAlignment="Left" Margin="76,552,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="70" Width="468" FontSize="36" Foreground="#FF0C0000" FontWeight="Bold"/>
        <Button x:ConnectionId='6' Content="Refresh" HorizontalAlignment="Left" Margin="445,589,0,0" VerticalAlignment="Top" Height="53" Width="202"                       />
        <Button x:ConnectionId='7' x:Name="btnNext" Content="Questions" HorizontalAlignment="Left" Margin="743,589,0,0" VerticalAlignment="Top" Width="202" Height="53"                      />
        <TextBlock x:Name="lblDisplayMark" HorizontalAlignment="Left" Margin="76,485,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"/>
        <ComboBox x:ConnectionId='8' x:Name="combo" HorizontalAlignment="Left" Margin="1125,36,0,0" VerticalAlignment="Top" Width="156" Height="55"                                          />
        <TextBlock x:Name="lblnumber" HorizontalAlignment="Left" Margin="704,52,0,0" TextWrapping="Wrap" Text="Choose Number of questions" VerticalAlignment="Top" Height="38" Width="388" FontSize="16" Foreground="#FFF7EFEF" FontWeight="Bold" FontFamily="Engravers MT"/>
        <TextBlock x:Name="lblTable" HorizontalAlignment="Left" Margin="282,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Width="379" Height="109" FontWeight="Bold" FontFamily="Engravers MT"/>
        <TextBlock x:Name="lblWrong" HorizontalAlignment="Left" Margin="704,411,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="433" Foreground="#FFF30834"/>
    </Grid>
</Page>

