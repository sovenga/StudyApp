<Page
    x:Class="StudyApp.QuestionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RenderTransformOrigin="0.448,0.171">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/border.png" Stretch="Fill"/>
        </Grid.Background>
        <TextBlock x:Name="lblDisplayMark" HorizontalAlignment="Left" Margin="76,485,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"/>
        <Grid HorizontalAlignment="Left" Height="728" Margin="0,10,20,0" VerticalAlignment="Top" Width="1346">
            <Button x:ConnectionId='1' Content="BACK" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top" Height="41" Width="181"                     />
            <TextBlock x:Name="lblQuestion" HorizontalAlignment="Left" Margin="28,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="494" Height="252" Foreground="#FFF7F1F1" FontFamily="Copperplate Gothic Bold"/>
            <TextBlock x:Name="lblTop" HorizontalAlignment="Left" Margin="28,174,0,0" TextWrapping="Wrap" Text="Answer this question below" VerticalAlignment="Top" Height="32" Width="312" FontSize="16" Foreground="#FFF7F1F1" FontWeight="Bold" FontFamily="Global Monospace"/>
            <TextBlock x:Name="lblTop2" HorizontalAlignment="Left" Margin="560,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="174" FontSize="16" Foreground="#FFF7F1F1" FontWeight="Bold" Text="Possible Solutions" FontFamily="Global Monospace"/>
            <RadioButton x:ConnectionId='2' x:Name="radAnswer1" Content="" HorizontalAlignment="Left" Margin="557,202,0,0" VerticalAlignment="Top" Width="725" Foreground="#FFF7F1F1"                              FontFamily="Copperplate Gothic Bold" FontSize="18" Height="30"/>
            <TextBlock x:Name="lblMarks" HorizontalAlignment="Left" Margin="1020,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Width="316" Height="85" FontFamily="Engravers MT"/>
            <RadioButton x:ConnectionId='3' x:Name="radAnswer2" Content="" HorizontalAlignment="Left" Margin="557,258,0,0" VerticalAlignment="Top" Width="725" Foreground="#FFF7F1F1"                              FontFamily="Copperplate Gothic Bold" FontSize="18" Height="30"/>
            <RadioButton x:ConnectionId='4' x:Name="radAnswer3" Content="" HorizontalAlignment="Left" Margin="557,310,0,0" VerticalAlignment="Top" Width="717"                              Foreground="#FFF7F1F1" FontFamily="Copperplate Gothic Bold" FontSize="18" Height="30"/>
            <Button x:ConnectionId='5' x:Name="btnFinish" Content="finish" HorizontalAlignment="Left" Margin="647,569,0,0" VerticalAlignment="Top" Width="168" Height="67"                       />
            <Button x:ConnectionId='6' x:Name="btnStartAgain" Content="Start Again" HorizontalAlignment="Left" Margin="447,569,0,0" VerticalAlignment="Top" Height="67" Width="170"                       />
            <Button x:ConnectionId='7' x:Name="btnNext" Content="Questions" HorizontalAlignment="Left" Margin="239,569,0,0" VerticalAlignment="Top" Width="180" Height="67"                      />
            <ComboBox x:ConnectionId='8' x:Name="combo" HorizontalAlignment="Left" Margin="1058,10,0,0" VerticalAlignment="Top" Width="216" Height="21"                                          />
            <TextBlock x:Name="lblnumber" HorizontalAlignment="Left" Margin="694,6,0,0" TextWrapping="Wrap" Text="Choose Number of questions" VerticalAlignment="Top" Height="39" Width="359" FontSize="16" Foreground="#FFF7EFEF" FontWeight="Bold" FontFamily="Engravers MT"/>
            <TextBlock x:Name="lblTable" HorizontalAlignment="Left" Margin="190,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Width="444" Height="35" FontWeight="Bold" FontFamily="Engravers MT"/>
            <TextBlock x:Name="lblWrong" HorizontalAlignment="Left" Margin="560,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="70" Width="579" Foreground="#FFF30834" FontSize="20" FontFamily="Perpetua Titling MT"/>
            <TextBlock x:Name="lblTimer" HorizontalAlignment="Left" Margin="349,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="85" Width="666" FontSize="16" Foreground="#FFF7EFEF" FontFamily="Engravers MT" FontWeight="Bold"/>
            <HyperlinkButton x:ConnectionId='9' x:Name="btnStartSession" Content="START SESSION" HorizontalAlignment="Left" Margin="28,577,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="20"                               Height="66" Width="174"/>
            <TextBlock x:Name="lblTimeRunning" HorizontalAlignment="Left" Margin="86,458,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="109" Width="967" Foreground="#FFFBF3F4" FontFamily="Arial Black" FontSize="16"/>
            <TextBlock x:Name="lblTimeElapsed" HorizontalAlignment="Left" Margin="94,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="62" Width="1188" FontFamily="Bodoni MT Black" FontSize="36"/>
            <ProgressBar x:Name="myProgressBar" HorizontalAlignment="Left" Height="64" Margin="45,694,0,-30" VerticalAlignment="Top" Width="406"/>
            <TextBlock x:Name="lblWait" HorizontalAlignment="Left" Margin="1093,475,-10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="263" Height="102" Foreground="#FFF7F1F1" FontFamily="Copperplate Gothic Bold"/>
        </Grid>
    </Grid>
</Page>

