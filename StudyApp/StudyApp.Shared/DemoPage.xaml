<Page
    x:Class="StudyApp.DemoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/background.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="575" Margin="25,76,0,0" VerticalAlignment="Top" Width="652">
            <Button x:Name="btnEnglish" Content="" HorizontalAlignment="Left" Margin="77,85,0,0" VerticalAlignment="Top" Width="514" Click="btnEnglish_Click" Height="72">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/english.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnMaths" Content="" HorizontalAlignment="Left" Margin="77,181,0,0" VerticalAlignment="Top" Width="514" Click="btnMaths_Click" Height="56">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/maths.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnBusiness" Content="" HorizontalAlignment="Left" Margin="77,249,0,0" VerticalAlignment="Top" Width="514" Height="59">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/busines.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnAccounting" Content="" HorizontalAlignment="Left" Margin="77,307,0,0" VerticalAlignment="Top" Width="514" Height="54">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/accounting.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnLO" Content="LIFE ORIENTATION" HorizontalAlignment="Left" Margin="77,360,0,0" VerticalAlignment="Top" Width="514"/>
            <Button x:Name="btnGeog" Content="GEOGRAPHY" HorizontalAlignment="Left" Margin="77,397,0,0" VerticalAlignment="Top" Width="514"/>
            <Button x:Name="btnSepedi" Content="SEPEDI/TSWANA" HorizontalAlignment="Left" Margin="77,448,0,0" VerticalAlignment="Top" Width="514"/>
            <HyperlinkButton x:Name="linkQuit" Content="QUIT" HorizontalAlignment="Left" Margin="233,497,0,0" VerticalAlignment="Top" Click="linkQuit_Click" Width="116"/>
            <ComboBox x:Name="comboList" HorizontalAlignment="Left" Margin="312,-78,0,0" VerticalAlignment="Top" Width="209" SelectionChanged="comboList_SelectionChanged" Height="87">
                <ComboBox.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/grade.png"/>
                </ComboBox.Background>
            </ComboBox>
        </Grid>
        <TextBlock x:Name="lblSelectedGrade" HorizontalAlignment="Left" Margin="111,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="497" FontSize="14" FontWeight="Bold" FontStyle="Italic"/>
    </Grid>
</Page>
